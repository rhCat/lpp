    act_t2s0 --> state_viewing
    act_t3s0[["clearSelection"]]:::action
    state_viewing -- "BACK" --> act_t3s0
    act_t3s0 --> state_scanned
    act_t4s0[["loadSkillDetail"]]:::action
    state_viewing -- "SELECT" --> act_t4s0
    act_t4s0 --> state_viewing
    act_t5s0[["exportRegistry"]]:::action
    state_scanned -- "EXPORT" --> act_t5s0
    act_t5s0 --> state_scanned
    act_t6s0[["exportRegistry"]]:::action
    state_viewing -- "EXPORT" --> act_t6s0

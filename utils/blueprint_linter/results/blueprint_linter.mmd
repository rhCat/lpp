flowchart TD
    %% L++ Logic CAD: L++ Blueprint Linter
        state_idle(["idle<br>No blueprint loaded, waiting for input"]):::entry
    subgraph Processing
        state_loaded(["loaded<br>Blueprint loaded, ready to lint"]):::state
        state_linting(["linting<br>Running lint checks"]):::state
    end

    %% Transitions
    gate_t0s0{{"blueprint is None?"}}:::gate
    state_idle -- "LOAD" --> gate_t0s0
    act_t0s0[["load_blueprint"]]:::action
    gate_t0s0 -- ✓ --> act_t0s0
    act_t0s0 --> state_loaded
    act_t2s0[["load_blueprint, clear_findings"]]:::action
    state_loaded -- "LOAD" --> act_t2s0
    act_t2s0 --> state_loaded
    gate_t4s0{{"blueprint is not None?"}}:::gate
    state_loaded -- "LINT" --> gate_t4s0
    act_t4s0[["init_lint"]]:::action
    gate_t4s0 -- ✓ --> act_t4s0
    act_t4s0 --> state_linting
    act_t5s0[["check_unreachable_states"]]:::action
    state_linting -- "CHECK_UNREACHABLE" --> act_t5s0
    act_t5s0 --> state_linting
    act_t6s0[["check_dead_end_states"]]:::action
    state_linting -- "CHECK_DEAD_END" --> act_t6s0
    act_t6s0 --> state_linting
    act_t7s0[["check_unused_gates"]]:::action
    state_linting -- "CHECK_UNUSED_GATES" --> act_t7s0
    act_t7s0 --> state_linting
    act_t8s0[["check_unused_actions"]]:::action
    state_linting -- "CHECK_UNUSED_ACTIONS" --> act_t8s0
    act_t8s0 --> state_linting
    act_t9s0[["check_unused_context"]]:::action
    state_linting -- "CHECK_UNUSED_CONTEXT" --> act_t9s0
    act_t9s0 --> state_linting
    act_t10s0[["check_orphaned_transitions"]]:::action
    state_linting -- "CHECK_ORPHANED" --> act_t10s0
    act_t10s0 --> state_linting
    act_t11s0[["check_missing_gate_refs"]]:::action
    state_linting -- "CHECK_GATE_REFS" --> act_t11s0
    act_t11s0 --> state_linting
    act_t12s0[["check_missing_action_refs"]]:::action
    state_linting -- "CHECK_ACTION_REFS" --> act_t12s0
    act_t12s0 --> state_linting
    act_t13s0[["check_duplicate_ids"]]:::action
    state_linting -- "CHECK_DUPLICATES" --> act_t13s0
    act_t13s0 --> state_linting
    act_t14s0[["check_naming_conventions"]]:::action
    state_linting -- "CHECK_NAMING" --> act_t14s0
    act_t14s0 --> state_linting
    act_t19s0[["unload_blueprint"]]:::action
    state_loaded -- "UNLOAD" --> act_t19s0
    act_t19s0 --> state_idle
    act_t21s0[["set_config"]]:::action
    state_idle -- "CONFIGURE" --> act_t21s0
    act_t21s0 --> state_idle
    act_t22s0[["set_config"]]:::action
    state_loaded -- "CONFIGURE" --> act_t22s0
    act_t22s0 --> state_loaded


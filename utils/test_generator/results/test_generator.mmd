flowchart TD
    %% L++ Logic CAD: L++ Test Case Generator
        state_idle(["idle<br>No blueprint loaded, waiting for input"]):::entry
    subgraph Processing
        state_loaded(["loaded<br>Blueprint loaded, ready to analyze"]):::state
        state_analyzing(["analyzing<br>Analyzing blueprint structure"]):::state
        state_generating(["generating<br>Generating test cases"]):::state
    end

    %% Transitions
    gate_t0s0{{"blueprint is None?"}}:::gate
    state_idle -- "LOAD" --> gate_t0s0
    act_t0s0[["load_blueprint"]]:::action
    gate_t0s0 -- ✓ --> act_t0s0
    act_t0s0 --> state_loaded
    act_t1s0[["clear_state, load_blueprint"]]:::action
    state_loaded -- "LOAD" --> act_t1s0
    act_t1s0 --> state_loaded
    gate_t3s0{{"blueprint is not None?"}}:::gate
    state_loaded -- "ANALYZE" --> gate_t3s0
    act_t3s0[["build_graph, analyze_paths, analyze_gates"]]:::action
    gate_t3s0 -- ✓ --> act_t3s0
    act_t3s0 --> state_analyzing
    gate_t4s0{{"paths is not None and len(p...?"}}:::gate
    state_analyzing -- "GENERATE" --> gate_t4s0
    act_t4s0[["generate_path_tests, generate_state_tests, generate_gate_tests +2"]]:::action
    gate_t4s0 -- ✓ --> act_t4s0
    act_t4s0 --> state_generating
    gate_t5s0{{"blueprint is not None?"}}:::gate
    state_loaded -- "GENERATE_ALL" --> gate_t5s0
    act_t5s0[["build_graph, analyze_paths, analyze_gates +5"]]:::action
    gate_t5s0 -- ✓ --> act_t5s0
    act_t5s0 --> state_generating
    state_analyzing -- "BACK" --> state_loaded


    gate_t0s0{{"api_key is not None?"}}:::gate
    state_init -- "START" --> gate_t0s0
    act_t0s0[["load_schema"]]:::action
    gate_t0s0 -- ✓ --> act_t0s0
    act_t0s0 --> state_ready
    gate_t1s0{{"api_key is None?"}}:::gate
    state_init -- "START" --> gate_t1s0
    gate_t1s0 -- ✓ --> state_error
    act_t2s0[["init_config"]]:::action
    state_error -- "CONFIGURE" --> act_t2s0
    act_t2s0 --> state_init
    act_t2s1[["init_config"]]:::action
    state_ready -- "CONFIGURE" --> act_t2s1
    act_t2s1 --> state_init
    act_t2s2[["init_config"]]:::action
    state_querying -- "CONFIGURE" --> act_t2s2
    act_t2s2 --> state_init
    act_t3s0[["clear_error"]]:::action
    state_error -- "SET_KEY" --> act_t3s0
    act_t3s0 --> state_init
    act_t4s0[["load_blueprint, clear_conversation"]]:::action
    state_ready -- "LOAD" --> act_t4s0
    act_t4s0 --> state_ready
    act_t5s0[["set_query, query_llm"]]:::action
    state_ready -- "QUERY" --> act_t5s0
    act_t5s0 --> state_querying
    gate_t6s0{{"blueprint is not None?"}}:::gate
    state_ready -- "EXPLAIN" --> gate_t6s0
    act_t6s0[["explain_blueprint"]]:::action
    gate_t6s0 -- ✓ --> act_t6s0
    act_t6s0 --> state_querying
    gate_t7s0{{"blueprint is not None?"}}:::gate
    state_ready -- "VALIDATE" --> gate_t7s0
    act_t7s0[["validate_blueprint"]]:::action
    gate_t7s0 -- ✓ --> act_t7s0
    act_t7s0 --> state_querying
    gate_t8s0{{"blueprint is not None?"}}:::gate
    state_ready -- "SUGGEST" --> gate_t8s0
    act_t8s0[["suggest_improvements"]]:::action
    gate_t8s0 -- ✓ --> act_t8s0
    act_t8s0 --> state_querying
    gate_t9s0{{"error is None?"}}:::gate
    state_querying -- "DONE" --> gate_t9s0
    gate_t9s0 -- ✓ --> state_ready
    gate_t10s0{{"error is not None?"}}:::gate
    state_querying -- "DONE" --> gate_t10s0
    gate_t10s0 -- ✓ --> state_error
    act_t11s0[["clear_conversation, clear_blueprint"]]:::action
    state_ready -- "CLEAR" --> act_t11s0
    act_t11s0 --> state_ready
    gate_t12s0{{"api_key is not None?"}}:::gate
    state_error -- "RETRY" --> gate_t12s0
    act_t12s0[["clear_error"]]:::action
    gate_t12s0 -- ✓ --> act_t12s0
    act_t12s0 --> state_ready


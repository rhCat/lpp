    state_parsing -- "AUTO" --> act_t1s0
    act_t1s0 --> state_analyzing
    act_t2s0[["analyzeImports, analyzeFunctions, analyzeControlFlow"]]:::action
    state_analyzing -- "AUTO" --> act_t2s0
    act_t2s0 --> state_inferring
    act_t3s0[["inferStates, inferTransitions, inferActions"]]:::action
    state_inferring -- "AUTO" --> act_t3s0
    act_t3s0 --> state_generating
    act_t4s0[["generateBlueprint"]]:::action
    state_generating -- "AUTO" --> act_t4s0
    act_t4s0 --> state_complete
    act_t5s0[["setError, log_error"]]:::action
    state_parsing -- "ERROR" --> act_t5s0
    act_t5s0 --> state_error
    act_t6s0[["setError, log_error"]]:::action
    state_analyzing -- "ERROR" --> act_t6s0
    act_t6s0 --> state_error
    act_t7s0[["setError, log_error"]]:::action
    state_inferring -- "ERROR" --> act_t7s0
    act_t7s0 --> state_error
    act_t8s0[["clearState"]]:::action
    state_complete -- "RESET" --> act_t8s0
    act_t8s0 --> state_idle
    act_t9s0[["clearError, clearState"]]:::action
    state_error -- "RESET" --> act_t9s0
    act_t9s0 --> state_idle


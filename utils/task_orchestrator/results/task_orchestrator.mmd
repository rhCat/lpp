flowchart TD
    %% L++ Logic CAD: Hierarchical Task Orchestrator
        state_idle(["idle<br>Awaiting task"]):::entry
    subgraph Processing
        state_analyzing(["analyzing<br>Root analysis"]):::state
        state_expanding(["expanding<br>Expand sub-features"]):::state
        state_planning(["planning<br>Plan leaf execution"]):::state
        state_building(["building<br>Build tools"]):::state
        state_executing(["executing<br>Execute leaf"]):::state
        state_reflecting(["reflecting<br>Reflect on progress"]):::state
        state_traversing(["traversing<br>Next leaf"]):::state
        state_evaluating(["evaluating<br>Evaluate completion"]):::state
    end
        state_complete[["complete<br>Done"]]:::terminal

    %% Transitions
    act_t0s0[["init"]]:::action
    state_idle -- "START" --> act_t0s0
    act_t0s0 --> state_idle
    gate_t1s0{{"True?"}}:::gate
    state_idle -- "SUBMIT" --> gate_t1s0
    act_t1s0[["set_task, analyze_root"]]:::action
    gate_t1s0 -- ✓ --> act_t1s0
    act_t1s0 --> state_analyzing
    gate_t2s0{{"feature_tree is not None && depth < max_depth and is_le... && error is None?"}}:::gate
    state_analyzing -- "DONE" --> gate_t2s0
    act_t2s0[["expand"]]:::action
    gate_t2s0 -- ✓ --> act_t2s0
    act_t2s0 --> state_expanding
    gate_t3s0{{"feature_tree is not None && is_leaf == True or depth >=... && error is None?"}}:::gate
    state_analyzing -- "DONE" --> gate_t3s0
    act_t3s0[["collect, plan_leaf"]]:::action
    gate_t3s0 -- ✓ --> act_t3s0
    act_t3s0 --> state_planning
    gate_t5s0{{"depth < max_depth and is_le... && error is None?"}}:::gate
    state_expanding -- "DONE" --> gate_t5s0
    act_t5s0[["expand"]]:::action
    gate_t5s0 -- ✓ --> act_t5s0
    act_t5s0 --> state_expanding
    gate_t6s0{{"is_leaf == True or depth >=... && error is None?"}}:::gate
    state_expanding -- "DONE" --> gate_t6s0
    act_t6s0[["collect, plan_leaf"]]:::action
    gate_t6s0 -- ✓ --> act_t6s0
    act_t6s0 --> state_planning
    gate_t8s0{{"tools_pending is not None a... && error is None?"}}:::gate
    state_planning -- "DONE" --> gate_t8s0
    act_t8s0[["build"]]:::action
    gate_t8s0 -- ✓ --> act_t8s0
    act_t8s0 --> state_building
    gate_t9s0{{"tools_pending is None or to... && error is None?"}}:::gate
    state_planning -- "DONE" --> gate_t9s0
    act_t9s0[["exec_leaf"]]:::action
    gate_t9s0 -- ✓ --> act_t9s0
    act_t9s0 --> state_executing
    gate_t11s0{{"tools_pending is not None a... && error is None?"}}:::gate
    state_building -- "DONE" --> gate_t11s0
    act_t11s0[["build"]]:::action
    gate_t11s0 -- ✓ --> act_t11s0
    act_t11s0 --> state_building
    gate_t12s0{{"tools_pending is None or to... && error is None?"}}:::gate
    state_building -- "DONE" --> gate_t12s0
    act_t12s0[["exec_leaf"]]:::action
    gate_t12s0 -- ✓ --> act_t12s0
    act_t12s0 --> state_executing
    gate_t14s0{{"exec_count < leaf_count && error is None?"}}:::gate
    state_executing -- "DONE" --> gate_t14s0
    act_t14s0[["next_leaf"]]:::action
    gate_t14s0 -- ✓ --> act_t14s0
    act_t14s0 --> state_traversing
    gate_t15s0{{"exec_count >= leaf_count && error is None?"}}:::gate
    state_executing -- "DONE" --> gate_t15s0
    act_t15s0[["reflect"]]:::action
    gate_t15s0 -- ✓ --> act_t15s0
    act_t15s0 --> state_reflecting
    gate_t17s0{{"tools_pending is not None a... && error is None?"}}:::gate
    state_traversing -- "DONE" --> gate_t17s0
    act_t17s0[["build"]]:::action
    gate_t17s0 -- ✓ --> act_t17s0
    act_t17s0 --> state_building
    gate_t18s0{{"tools_pending is None or to... && error is None?"}}:::gate
    state_traversing -- "DONE" --> gate_t18s0
    act_t18s0[["exec_leaf"]]:::action
    gate_t18s0 -- ✓ --> act_t18s0
    act_t18s0 --> state_executing
    gate_t20s0{{"error is None?"}}:::gate
    state_reflecting -- "DONE" --> gate_t20s0
    act_t20s0[["evaluate, incr"]]:::action
    gate_t20s0 -- ✓ --> act_t20s0
    act_t20s0 --> state_evaluating
    gate_t22s0{{"is_complete == True && error is None?"}}:::gate
    state_evaluating -- "DONE" --> gate_t22s0
    gate_t22s0 -- ✓ --> state_complete
    gate_t23s0{{"is_complete is None or is_c... && iteration < max_iterations && error is None?"}}:::gate
    state_evaluating -- "DONE" --> gate_t23s0
    act_t23s0[["reset_exec, expand"]]:::action
    gate_t23s0 -- ✓ --> act_t23s0
    act_t23s0 --> state_expanding
    state_analyzing -- "RESET" --> state_idle
    state_expanding -- "RESET" --> state_idle
    state_planning -- "RESET" --> state_idle
    state_building -- "RESET" --> state_idle
    state_executing -- "RESET" --> state_idle
    state_reflecting -- "RESET" --> state_idle
    state_traversing -- "RESET" --> state_idle
    state_evaluating -- "RESET" --> state_idle


flowchart TD
    %% L++ Logic CAD: Scholar Chatbot
        state_idle(["idle\nReady for research query"]):::entry
    subgraph Processing
        state_searching(["searching\nSearching academic sources"])
        state_reviewing(["reviewing\nReviewing search results"])
        state_analyzing(["analyzing\nLLM analyzing selected papers"])
        state_chatting(["chatting\nInteractive Q&A about research"])
    end
        state_error[["error\nError occurred"]]:::errorState

    %% Transitions
    act_t0s0[["initConfig"]]:::action
    state_idle -- "INIT" --> act_t0s0
    act_t0s0 --> state_idle
    act_t1s0[["setQuery, searchAll"]]:::action
    state_idle -- "SEARCH" --> act_t1s0
    act_t1s0 --> state_searching
    gate_t2s0{{"error is None?"}}:::gate
    state_searching -- "DONE" --> gate_t2s0
    gate_t2s0 -- ✓ --> state_reviewing
    gate_t3s0{{"error is not None?"}}:::gate
    state_searching -- "DONE" --> gate_t3s0
    gate_t3s0 -- ✓ --> state_error
    act_t4s0[["clearSelection, clearSynthesis, setQuery +1"]]:::action
    state_reviewing -- "SEARCH" --> act_t4s0
    act_t4s0 --> state_searching
    act_t5s0[["selectPapers, fetchDetails, synthesize"]]:::action
    state_reviewing -- "SELECT" --> act_t5s0
    act_t5s0 --> state_analyzing
    gate_t6s0{{"error is None?"}}:::gate
    state_analyzing -- "DONE" --> gate_t6s0
    gate_t6s0 -- ✓ --> state_chatting
    gate_t7s0{{"error is not None?"}}:::gate
    state_analyzing -- "DONE" --> gate_t7s0
    gate_t7s0 -- ✓ --> state_error
    act_t8s0[["chat"]]:::action
    state_chatting -- "ASK" --> act_t8s0
    act_t8s0 --> state_chatting
    act_t9s0[["clearResults, clearSelection, clearSynthesis +2"]]:::action
    state_chatting -- "SEARCH" --> act_t9s0
    act_t9s0 --> state_searching
    act_t10s0[["clearSynthesis"]]:::action
    state_chatting -- "BACK" --> act_t10s0
    act_t10s0 --> state_reviewing
    act_t11s0[["clearResults, clearSelection"]]:::action
    state_reviewing -- "RESET" --> act_t11s0
    act_t11s0 --> state_idle
    act_t12s0[["clearError"]]:::action
    state_error -- "RETRY" --> act_t12s0
    act_t12s0 --> state_idle


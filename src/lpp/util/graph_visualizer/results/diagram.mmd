flowchart TD
    %% L++ Logic CAD: Graph Visualizer
        state_idle(["idle<br>Waiting for blueprint input"]):::entry
        state_generating(["generating<br>Generating interactive diagram"]):::state
        state_done[["done<br>Diagram generation complete"]]:::terminal
        state_error[["error<br>No blueprint provided"]]:::terminal

    %% Transitions
    gate_t0s0{{"has_blueprint != True?"}}:::gate
    state_idle -- "START" --> gate_t0s0
    gate_t0s0 -- ✓ --> state_error
    gate_t1s0{{"has_blueprint == True?"}}:::gate
    state_idle -- "START" --> gate_t1s0
    gate_t1s0 -- ✓ --> state_generating
    act_t2s0[["generate_diagram"]]:::action
    state_generating -- "GENERATE" --> act_t2s0
    act_t2s0 --> state_done

    %% Styling - ALL shapes have explicit fill and black text
    classDef entry fill:#e1f5fe,stroke:#01579b,stroke-width:3px,color:#000
    classDef terminal fill:#c8e6c9,stroke:#2e7d32,stroke-width:3px,color:#000
    classDef errorState fill:#ffcdd2,stroke:#c62828,stroke-width:2px,color:#000
    classDef state fill:#ffffff,stroke:#6a6aaa,stroke-width:2px,color:#000
    classDef gate fill:#fff3e0,stroke:#e65100,stroke-width:2px,color:#000
    classDef action fill:#e3f2fd,stroke:#1565c0,stroke-width:1px,color:#000
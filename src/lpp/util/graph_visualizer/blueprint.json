{
  "$schema": "lpp/v0.2.0",
  "id": "graph_visualizer",
  "name": "Graph Visualizer",
  "version": "1.0.0",
  "description": "Generates an interactive HTML/SVG state machine diagram from an L++ blueprint.",
  "context_schema": {
    "properties": {
      "blueprint": {
        "type": "string",
        "description": "JSON representation of the L++ blueprint"
      },
      "html_path": {
        "type": "string",
        "description": "Path to the generated HTML file"
      },
      "has_blueprint": {
        "type": "boolean",
        "default": false
      },
      "has_html": {
        "type": "boolean",
        "default": false
      },
      "error": {
        "type": "string"
      }
    }
  },
  "states": {
    "idle": {
      "description": "Waiting for blueprint input"
    },
    "generating": {
      "description": "Generating interactive diagram"
    },
    "done": {
      "description": "Diagram generation complete"
    },
    "error": {
      "description": "No blueprint provided"
    }
  },
  "entry_state": "idle",
  "terminal_states": {
    "done": {},
    "error": {}
  },
  "gates": {
    "has_blueprint": {
      "type": "expression",
      "expression": "has_blueprint == True"
    },
    "no_blueprint": {
      "type": "expression",
      "expression": "has_blueprint != True"
    }
  },
  "transitions": [
    {
      "id": "t_no_bp",
      "from": "idle",
      "to": "error",
      "on_event": "START",
      "gates": [
        "no_blueprint"
      ]
    },
    {
      "id": "t_start",
      "from": "idle",
      "to": "generating",
      "on_event": "START",
      "gates": [
        "has_blueprint"
      ]
    },
    {
      "id": "t_generate",
      "from": "generating",
      "to": "done",
      "on_event": "GENERATE",
      "actions": [
        "generate_diagram"
      ]
    }
  ],
  "actions": {
    "generate_diagram": {
      "type": "compute",
      "compute_unit": "graph_visualizer:generate",
      "input_map": {
        "blueprint": "blueprint",
        "html_path": "html_path"
      },
      "output_map": {
        "html_path": "html_path",
        "has_html": "has_html"
      }
    }
  }
}
